@model KisiselBerkeKurnaz.Models.TBL_BLOG

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_YoneticiLayout.cshtml";
}

<h2 style="text-align:center">Yazı Oluşturma Ekranı</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
