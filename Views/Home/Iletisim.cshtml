@model KisiselBerkeKurnaz.Models.TBL_ILETISIM

    @{
        ViewBag.Title = "Iletisim";
        Layout = "~/Views/Shared/_Layout.cshtml";
    }

    <!-- Contact Section -->
    <section id="contact" style="margin-top:30px;">
        <div class="container">
            <h2 class="text-center text-uppercase text-secondary mb-0">İLETİŞİM</h2>
            <hr class="star-dark mb-5">
            <div class="row">
                <div class="col-lg-8 mx-auto">
                    <form>
                        <div class="control-group">
                            <div class="form-group floating-label-form-group controls mb-0 pb-2">
                                <label>Name</label>
                                <input class="form-control" id="ADSOYAD" type="text" placeholder="Adınız Ve Soyadınız" required="required" data-validation-required-message="Please enter your name.">
                                <p class="help-block text-danger"></p>
                            </div>
                        </div>
                        <div class="control-group">
                            <div class="form-group floating-label-form-group controls mb-0 pb-2">
                                <label>Email Address</label>
                                <input class="form-control" id="EMAIL" type="email" placeholder="E-Mail Adresiniz" required="required" data-validation-required-message="Please enter your email address.">
                                <p class="help-block text-danger"></p>
                            </div>
                        </div>
                        <div class="control-group">
                            <div class="form-group floating-label-form-group controls mb-0 pb-2">
                                <label>Phone Number</label>
                                <input class="form-control" id="CEPTELEFONU" type="tel" placeholder="Cep Telefonunuz" required="required" data-validation-required-message="Please enter your phone number.">
                                <p class="help-block text-danger"></p>
                            </div>
                        </div>
                        <div class="control-group">
                            <div class="form-group floating-label-form-group controls mb-0 pb-2">
                                <label>Message</label>
                                <textarea class="form-control" id="MESAJ" rows="5" placeholder="Mesajınız" required="required" data-validation-required-message="Please enter a message."></textarea>
                                <p class="help-block text-danger"></p>
                            </div>
                        </div>
                        <br>
                        <div id="success"></div>
                        <div class="form-group">
                            <center><button type="submit" class="btn btn-primary btn-xl" id="gonder">Mesaj Gönder</button></center>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
    <div id="HataMesaj" class="container text-center">
        <h5>Lütfen Bütün Alanları Doldurunuz...</h5>
    </div>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('#HataMesaj').hide(1);
            $("#gonder").click(function () {
                var adsoyadin = $("#ADSOYAD").val();
                var ceptelefonun = $("#CEPTELEFONU").val();
                var mailin = $("#EMAIL").val();
                var mesajin = $("#MESAJ").val();

                if (adsoyadin == "") {
                    $('#HataMesaj').show(1);
                }
                else {
                    $.ajax({
                        url: '/Home/IletisimForm/',
                        data: { adsoyad: adsoyadin, telefon: ceptelefonun, mail: mailin, mesaj: mesajin },
                        type: 'POST',
                        dataType: 'JSON',
                        success: function (data) {
                            alert("Online Kayıt Formu Gönderildi...");
                        }
                    });
                }


            });
        })
    </script>