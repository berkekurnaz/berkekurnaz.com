@model KisiselBerkeKurnaz.Models.TBL_KULLANICI

@{
    ViewBag.Title = "Giris";
    Layout = null;
}

<style>

    body {
        margin: 0;
        padding: 0;
        background: url(https://wallpapercave.com/wp/yDkZpoT.jpg);
        background-size: cover;
        background-position: center;
        font-family: sans-serif;
    }

    .loginBox {
        width: 320px;
        height: 420px;
        background: #000;
        color: #fff;
        top: 50%;
        left: 50%;
        position: absolute;
        transform: translate(-50%,-50%);
        box-sizing: border-box;
        padding: 70px 30px;
    }

    .avatar {
        width: 100px;
        height: 100px;
        border-radius: 50%;
        position: absolute;
        top: -50px;
        left: calc(50% - 50px);
    }

    h1 {
        margin: 0;
        padding: 0 0 20px;
        text-align: center;
        font-size: 22px;
    }

    .loginBox p {
        margin: 0;
        padding: 0;
        font-weight: bold;
    }

    .form-input {
        width: 100%;
        margin-bottom: 20px;
        border: none;
        border-bottom: 1px solid #fff;
        background: transparent;
        outline: none;
        height: 40px;
        color: #fff;
        font-size: 16px;
    }

    .form-button {
        width: 100%;
        margin-bottom: 20px;
        border: none;
        outline: none;
        height: 40px;
        background: #2980B9;
        color: #fff;
        font-size: 18px;
        border-radius: 20px;
        transition: .3s;
    }

        .form-button:hover {
            cursor: pointer;
            background: #5CACE2;
            color: #000;
        }

    .loginBox a {
        color: #fff;
        text-align: center;
        text-decoration: none;
        font-size: 12px;
        line-height: 20px;
        color: darkgrey;
    }
</style>

<div class="loginBox">
    <img src="https://cdn.iconscout.com/public/images/icon/free/png-512/avatar-user-business-man-399587fe24739d5a-512x512.png" alt="resim" class="avatar" />
    <h1>Giriş Ekranı</h1>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <span>@ViewBag.Uyari</span>
        <form>
            <p>Kullanıcı Adı</p>
            @Html.EditorFor(model => model.KULLANICIADI, new { htmlAttributes = new { @class = "form-input", @placeholder = "Kullanıcı Adı", @required = "" } })
            @Html.ValidationMessageFor(model => model.KULLANICIADI, "", new { @class = "text-danger" })
            <p>Şifre</p>
            @Html.EditorFor(model => model.SIFRE, new { htmlAttributes = new { @class = "form-input", @placeholder = "Şifre", @required = "", @type = "password" } })
            @Html.ValidationMessageFor(model => model.SIFRE, "", new { @class = "text-danger" })
            <input type="submit" class="form-button" value="Giriş Yap" />
            <center><a href="#">Şifremi Unuttum ?</a></center>
        </form>

    }

</div>

